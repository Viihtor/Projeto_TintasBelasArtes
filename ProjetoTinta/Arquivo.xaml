<Window x:Class="ProjetoTinta.Arquivo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arquivo" Height="221" Width="349">
    <Window.Background>
        <ImageBrush ImageSource="img/background_progama.jpg"/>
    </Window.Background>
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="121,29,0,0" VerticalAlignment="Top" Width="110">
            <WrapPanel>
                <Button Content="Abrir arquivo JSON" FontSize="12" x:Name="btnDialog" Click="btnDialog_Click"></Button>
            </WrapPanel>
        </DockPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Procurar arquivo" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Exportar JSON" HorizontalAlignment="Left" Margin="84,116,0,0" VerticalAlignment="Top" Width="169" Height="48" FontSize="14" x:Name="btnExportar" Click="btnExportar_Click"/>

    </Grid>
</Window>
